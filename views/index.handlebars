<div class="container">
    <div class="jumbotron text-center">
        <div class="row">
            <div class="col-12 text-center" id="top-bar">
                <img src="assets/images/candy-01.png" alt="candy pieces" width="30%">
                <h1>candy</h1>
            </div>
        </div>
    </div>

    <div class="container candies">
        <div class="container available-candies">
            <div class="col-xs-6 text-center" id="task">
                <div class="row"><h2>Devour these candies!</h2></div>
                <div class="row">
                    {{#each candy_data}}
                    {{#unless this.devoured}}
                    <div class="col-xs-9 text-center">
                        <pre>{{this.id}}. {{this.candy_name}}</pre>
                    </div>
                    <div class="col-xs-3 text-center">
                        <form method="POST" action="/candy/update?_method=PUT" class="button-size">
                            <input type="hidden" name="candy_id" type="text" value={{this.id}}>
                            
                            <button type="submit" class="btn btn-default">
                                Devour! </button><br>
                        <br></form>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
        
        <div class="container devoured-candies">
                            <div class="row"><h2>Devoured Candies</h2></div>

                <div class="col-xs-6 text-center" class="task">
                {{#each candy_data}}
                {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.candy_name}}" readonly>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

</div>


<div class="container">
    <div class="jumbotron submit-new-candy">

    <div class="row">
        <div class="col-xs-12 text-center enter_section">
                            <div class="row"><h3>Enter a New Candy to Devour!</h3></div>

            <form action="/candy/create" method="POST">
                <input type="text" name="candy_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
        </div>
    </div>
</div>
</div>